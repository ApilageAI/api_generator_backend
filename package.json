{
  "name": "ai-api-platform",
  "version": "1.0.0",
  "description": "AI API Platform with Firebase authentication and Gemini AI integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:optimized": "node --max-old-space-size=1024 --expose-gc src/app.js",
    "start:choreo": "node --max-old-space-size=2048 src/app.js",
    "start:old": "node server.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "nodemon --max-old-space-size=512 --expose-gc src/app.js",
    "dev:old": "nodemon server.js",
    "test": "node tests/test-runner.js",
    "test:smoke": "node tests/test-runner.js --smoke",
    "test:unit": "node tests/unit/health.test.js",
    "test:integration": "node tests/integration/api.test.js",
    "test:load": "node tests/load/stress.test.js",
    "test:e2e": "node tests/e2e/full-system.test.js",
    "test:unit-only": "node tests/test-runner.js --unit-only",
    "test:load-only": "node tests/test-runner.js --load-only",
    "test:quick": "node tests/test-runner.js --no-load --no-e2e",
    "health-check": "node scripts/health-check.js",
    "health-check:curl": "curl -f http://localhost:3000/api/health/live || exit 1",
    "setup": "node scripts/dev-setup.js",
    "deploy:check": "npm run test:smoke && npm run health-check",
    "deploy:validate": "npm test && npm run health-check"
  },
  "keywords": [
    "ai",
    "api",
    "gemini",
    "firebase",
    "authentication",
    "credit-system"
  ],
  "author": "AI API Platform",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-api-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-api-platform/issues"
  },
  "homepage": "https://github.com/your-username/ai-api-platform#readme"
}
